<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.kayosystem.honki.chapter07.lesson31">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".samples.list.RecyclerViewListActivity"
            android:label="@string/app_name"/>
        <activity
            android:name=".samples.grid.RecyclerViewGridActivity"
            android:label="@string/app_name"/>
        <activity
            android:name=".samples.staggered.RecyclerViewStaggeredActivity"
            android:label="@string/app_name"/>
    </application>

</manifest>